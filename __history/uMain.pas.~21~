  System.Win.ScktComp, IdBaseComponent, IdComponent, IdUDPBase, IdUDPClient,
  IdSNTP,uHook,uLog,uFlash,uConfig,uFuncs;

type
  TfMain = class(TForm)
    Panel1: TPanel;
    btnStart: TButton;
    Page1: TPageControl;
    StatusBar1: TStatusBar;
    tsInfo: TTabSheet;
    tsData: TTabSheet;
    memoInfo: TMemo;
    MemoData: TMemo;
